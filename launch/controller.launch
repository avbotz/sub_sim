<launch>
	<!-- Load simulator -->
	<include file="$(find simulator)/launch/transdec.launch"/>
	<include file="$(find simulator)/launch/upload.launch" />
	<node name="simulator_node" pkg="simulator" type="simulator_node" output="screen"/>

	<!-- View virtual camera images -->
	<node name="front_camera_view" pkg="image_view" type="image_view" respawn="false" output="screen">
		<remap from="image" to="/nemo/front_camera/image" />
	</node>
	<node name="down_camera_view" pkg="image_view" type="image_view" respawn="false" output="screen">
		<remap from="image" to="/nemo/down_camera/image" />
	</node>
</launch>
